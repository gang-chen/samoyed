<!-- Definitions of the main menu bar and toolbar. -->
<?xml version="1.0" encoding="UTF-8"?>
<ui>

  <menubar name="main-menu-bar">
    <menu name="session" action="session">
      <menuitem name="new" action="create-session"/>
      <menuitem name="switch" action="switch-session"/>
      <separator/>
      <menuitem name="preferences" action="edit-preferences"/>
      <separator/>
      <menuitem name="manage-sessions" action="manage-sessions"/>
      <separator/>
      <menuitem name="quit" action="quit-session"/>
    </menu>

    <menu name="project" action="project">
      <menuitem name="new" action="create-project"/>
      <menuitem name="open" action="open-project"/>
      <menuitem name="close" action="close-project"/>
      <menuitem name="close-all" action="close-all-projects"/>
      <separator/>
      <menuitem name="new-file" action="create-file"/>
      <menuitem name="new-directory" action="create-directory"/>
      <menuitem name="new-library" action="create-library"/>
      <menuitem name="new-program" action="create-program"/>
      <separator/>
      <menuitem name="properties" action="edit-properties"/>
      <separator/>
      <menuitem name="set-active-configuration"
                action="set-active-configuration"/>
      <menuitem name="manage-configurations" action="manage-configurations"/>
    </menu>

    <menu name="file" action="file">
      <menuitem name="open" action="open-file"/>
      <separator/>
      <menuitem name="save" action="save-file"/>
      <menuitem name="save-all" action="save-all-files"/>
      <menuitem name="reload" action="reload-file"/>
      <separator/>
      <menuitem name="close" action="close-file"/>
      <menuitem name="close-all" action="close-all-files"/>
    </menu>

    <menu name="edit" action="edit">
      <menuitem name="undo" action="undo"/>
      <menuitem name="redo" action="redo"/>
      <separator/>
      <menuitem name="cut" action="cut"/>
      <menuitem name="copy" action="copy"/>
      <menuitem name="paste" action="paste"/>
      <menuitem name="delete" action="delete"/>
    </menu>

    <menu name="search" action="search">
    </menu>

    <menu name="view" action="view">
      <menuitem name="new-window" action="create-window"/>
      <menu name="window-layout" action="window-layout">
        <menuitem name="set-tools-pane-right" action="set-tools-pane-right"/>
        <menuitem name="set-tools-pane-bottom" action="set-tools-pane-bottom"/>
      </menu>
      <separator/>
      <menuitem name="new-editor" action="create-editor"/>
      <menuitem name="move-editor-down" action="move-editor-down"/>
      <menuitem name="move-editor-right" action="move-editor-right"/>
      <menuitem name="split-editor-horizontally"
                action="split-editor-horizontally"/>
      <menuitem name="split-editor-vertically"
                action="split-editor-vertically"/>
      <separator/>
      <menuitem name="toolbar" action="show-hide-toolbar"/>
      <menuitem name="status-bar" action="show-hide-status-bar"/>
      <placeholder name="side-panes"/>
      <separator/>
      <menuitem name="full-screen" action="enter-leave-full-screen"/>
    </menu>

    <menu name="help" action="help">
      <menuitem name="manual" action="show-manual"/>
      <menuitem name="tutorial" action="show-tutorial"/>
      <menuitem name="about" action="show-about"/>
    </menu>
  </menubar>

  <toolbar name="main-toolbar">
    <toolitem name="file-save" action="save-file"/>
    <separator/>
    <toolitem name="edit-undo" action="undo"/>
    <toolitem name="edit-redo" action="redo"/>
    <separator/>
    <toolitem name="edit-cut" action="cut"/>
    <toolitem name="edit-copy" action="copy"/>
    <toolitem name="edit-paste" action="paste"/>
    <toolitem name="edit-delete" action="delete"/>
  </toolbar>

</ui>
