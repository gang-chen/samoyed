<plugin>
  <id>text-file-recoverer</id>
  <name>Text file recoverer</name>
  <description>This plugin adds text file recovery functionality.</description>
  <module>textfilerecoverer</module>
  <extension>
    <id>file-observer</id>
    <point>file-observers</point>
    <detail>
      <mime-type>text/plain</mime-type>
    </detail>
  </extension>
  <extension>
    <id>file-recoverer</id>
    <point>file-recoverers</point>
    <detail>
      <mime-type>text/plain</mime-type>
    </detail>
  </extension>
</plugin>
