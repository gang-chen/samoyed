<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <id>text-file-recoverer</id>
  <_name>Text file recoverer</_name>
  <_description>This plugin adds text file recovery functionality.</_description>
  <module>textfilerecoverer</module>
  <extension>
    <id>file-observer</id>
    <point>file-observers</point>
    <detail>
      <mime-type>text/plain</mime-type>
    </detail>
  </extension>
  <extension>
    <id>file-recoverer</id>
    <point>file-recoverers</point>
    <detail>
      <mime-type>text/plain</mime-type>
    </detail>
  </extension>
  <extension>
    <id>preferences</id>
    <point>preferences</point>
    <detail>
      <category>text-editor</category>
    </detail>
  </extension>
</plugin>
