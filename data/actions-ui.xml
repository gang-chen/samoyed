<!-- Definitions of menu bar, toolbars and popup menus for actions -->
<ui>

  <menubar name="main-menu-bar">
    <menu name="session" action="session">
      <menuitem name="new" action="create-session"/>
      <menuitem name="switch" action="switch-session"/>
      <menuitem name="manage" action="manage-sessions"/>
      <menuitem name="quit" action="quit-session"/>
    </menu>

    <menu name="project" action="project">
      <menuitem name="new" action="project-new"/>
      <menuitem name="open" action="project-open"/>
      <menuitem name="close" action="project-close"/>
      <menuitem name="close-all" action="project-close-all"/>
      <separator/>
      <menuitem name="new-file" action="project-new-file"/>
      <menuitem name="new-directory" action="project-new-directory"/>
      <separator/>
      <menuitem name="manage-configurations"
                action="project-manage-configurations"/>
    </menu>

    <menu name="file" action="file">
      <menuitem name="open" action="open-file"/>
      <separator/>
      <menuitme name="save" action="save-file"/>
      <menuitem name="save-all" action="save-all-files"/>
      <menuitem name="reload" action="reload-file"/>
      <separator/>
      <menuitem name="close" action="close-file"/>
      <menuitem name="close-all" action="close-all-files"/>
      <separator/>
      <menuitem name="page-setup" action="setup-page"/>
      <menuitem name="print-preview" action="preview-printed-file"/>
      <menuitem name="print" action="print-file"/>
    </menu>

    <menu name="edit" action="edit">
      <menuitem name="undo" action="undo"/>
      <menuitem name="redo" action="redo"/>
      <separator/>
      <menuitem name="cut" action="cut"/>
      <menuitem name="copy" action="copy"/>
      <menuitem name="paste" action="paste"/>
      <menuitem name="delete" action="delete"/>
      <separator/>
      <menuitem name="configure" action="configure"/>
      <separator/>
      <menuitem name="preferences" action="edit-preferences"/>
    </menu>

    <menu name="view" action="view">
      <menuitem name="new-window" action="create-window"/>
      <menuitem name="new-editor-group" action="create-editor-group"/>
      <menuitem name="new-editor" action="create-editor"/>
      <separator/>
      <menuitem name="full-screen" action="enter-leave-full-screen"/>
      <separator/>
      <menuitem name="toolbar" action="show-hide-toolbar"/>
      <menu name="side-panes" action="side-panes"/>
      </menu>
    </menu>

    <menu name="help" action="help">
      <menuitem name="manual" action="show-manual"/>
      <menuitem name="tutorial" action="show-tutorial"/>
      <menuitme name="about" action="show-about"/>
    </menu>
  </menubar>

  <toolbar name="main-toolbar">
    <toolitem name="file-save" action="save-file"/>
    <toolitem name="file-save-all" action="save-all-files"/>
    <separator/>
    <toolitem name="edit-undo" action="undo"/>
    <toolitem name="edit-redo" action="redo"/>
    <separator/>
    <toolitem name="edit-cut" action="cut"/>
    <toolitem name="edit-copy" action="copy"/>
    <toolitem name="edit-paste" action="paste"/>
    <toolitem name="edit-delete" action="delete"/>
  </toolbar>

  <popup name="new-popup-menu">
    <menuitem name="file" action="create-file"/>
    <menuitem name="directory" action="create-directory"/>
  </popup>

  <popup name="editor-popup-menu">
    <menuitem name="edit-cut" action="cut"/>
  </popup>

</ui>
