<!-- Definitions of menu bar, toolbars and popup menus for actions -->
<ui>

  <menubar name="main-menu-bar">
    <menu name="session" action="session">
      <menuitem name="new" action="session-new"/>
      <menuitem name="switch" action="session-switch"/>
      <menuitem name="manage" action="session-manage"/>
      <menuitem name="quit" action="session-quit"/>
    </menu>

    <menu name="project" action="project">
      <menuitem name="new" action="project-new"/>
      <menuitem name="open" action="project-open"/>
      <menuitem name="close" action="project-close"/>
      <menuitem name="close-all" action="project-close-all"/>
      <separator/>
      <menuitem name="new-file" action="project-new-file"/>
      <menuitem name="new-directory" action="project-new-directory"/>
      <separator/>
      <menuitem name="manage-configurations"
                action="project-manage-configurations"/>
    </menu>

    <menu name="file" action="file">
      <menuitem name="open" action="file-open"/>
      <separator/>
      <menuitme name="save" action="file-save"/>
      <menuitem name="save-all" action="file-save-all"/>
      <menuitem name="reload" action="file-reload"/>
      <separator/>
      <menuitem name="close" action="file-close"/>
      <menuitem name="close-all" action="file-close-all"/>
      <separator/>
      <menuitem name="page-setup" action="file-page-setup"/>
      <menuitem name="print-preview" action="file-print-preview"/>
      <menuitem name="print" action="file-print"/>
    </menu>

    <menu name="edit" action="edit">
      <menuitem name="undo" action="edit-undo"/>
      <menuitem name="redo" action="edit-redo"/>
      <separator/>
      <menuitem name="cut" action="edit-cut"/>
      <menuitem name="copy" action="edit-copy"/>
      <menuitem name="paste" action="edit-paste"/>
      <menuitem name="delete" action="edit-delete"/>
      <separator/>
      <menuitem name="configure" action="edit-configure"/>
      <separator/>
      <menuitem name="preferences" action="edit-preferences"/>
    </menu>

    <menu name="view" action="view">
      <menuitem name="new-window" action="view-new-window"/>
      <menuitem name="new-editor-group" action="view-new-editor-group"/>
      <separator/>
      <menuitem name="full-screen" action="view-full-screen"/>
      <separator/>
      <menuitem name="toolbar" action="view-toolbar"/>
      <menu name="side-panes" action="view-side-panes"/>
        <placeholder name="placeholder">
        </placeholder>
      </menu>
    </menu>

    <menu name="help" action="help">
      <menuitem name="manual" action="help-manual"/>
      <menuitem name="tutorial" action="help-tutorial"/>
      <menuitme name="about" action="help-about"/>
    </menu>
  </menubar>

  <toolbar name="main-toolbar">
    <toolitem name="file-save" action="file-save"/>
    <toolitem name="file-save-all" action="file-save-all"/>
    <separator/>
    <toolitem name="edit-undo" action="edit-undo"/>
    <toolitem name="edit-redo" action="edit-redo"/>
    <separator/>
    <toolitem name="edit-cut" action="edit-cut"/>
    <toolitem name="edit-copy" action="edit-copy"/>
    <toolitem name="edit-paste" action="edit-paste"/>
    <toolitem name="edit-delete" action="edit-delete"/>
  </toolbar>

  <popup name="new-popup-menu">
    <menuitem name="file" action="new-file"/>
    <menuitem name="directory" action="new-directory"/>
  </popup>

  <popup name="editor-popup-menu">
    <menuitem name="edit-cut" action="edit-cut"/>
  </popup>

</ui>
