<!-- Definitions of menu bar, toolbars and popup menus for actions -->
<ui>

  <menubar name="main-menu-bar">
    <menu name="session" action="session">
      <menuitem name="session-new" action="session-new"/>
      <menuitem name="session-switch" action="session-switch"/>
      <menuitem name="session-manage" action="session-manage"/>
      <menuitem name="session-quit" action="session-quit"/>
    </menu>

    <menu name="project" action="project">
      <menuitem name="project-new" action="project-new"/>
      <menuitem name="project-open" action="project-open"/>
      <menuitem name="project-close" action="project-close"/>
      <menuitem name="project-close-all" action="project-close-all"/>
      <separator/>
      <menuitem name="project-new-file" action="project-new-file"/>
      <menuitem name="project-new-directory" action="project-new-directory"/>
      <separator/>
      <menuitem name="project-manage-configurations"
                action="project-manage-configurations"/>
    </menu>

    <menu name="file" action="file">
      <menuitem name="file-open" action="file-open"/>
      <separator/>
      <menuitme name="file-save" action="file-save"/>
      <menuitem name="file-save-all" action="file-save-all"/>
      <menuitem name="file-reload" action="file-reload"/>
      <separator/>
      <menuitem name="file-close" action="file-close"/>
      <menuitem name="file-close-all" action="file-close-all"/>
      <separator/>
      <menuitem name="file-page-setup" action="file-page-setup"/>
      <menuitem name="file-print-preview" action="file-print-preview"/>
      <menuitem name="file-print" action="file-print"/>
    </menu>

    <menu name="edit" action="edit">
      <menuitem name="edit-undo" action="edit-undo"/>
      <menuitem name="edit-redo" action="edit-redo"/>
      <separator/>
      <menuitem name="edit-cut" action="edit-cut"/>
      <menuitem name="edit-copy" action="edit-copy"/>
      <menuitem name="edit-paste" action="edit-paste"/>
      <menuitem name="edit-delete" action="edit-delete"/>
      <separator/>
      <menuitem name="edit-configure" action="edit-configure"/>
      <separator/>
      <menuitem name="edit-preferences" action="edit-preferences"/>
    </menu>

    <menu name="view" action="view">
      <menuitem name="view-new-window" action="view-new-window"/>
      <menuitem name="view-new-editor-group" action="view-new-editor-group"/>
      <separator/>
      <menuitem name="view-full-screen" action="view-full-screen"/>
      <separator/>
      <menuitem name="view-toolbar" action="view-toolbar"/>
      <menuitem name="view-side-panes" action="view-side-panes"/>
    </menu>

    <menu name="help" action="help">
      <menuitem name="help-manual" action="help-manual"/>
      <menuitem name="help-tutorial" action="help-tutorial"/>
      <menuitme name="help-about" action="help-about"/>
    </menu>
  </menubar>

  <toolbar name="main-toolbar">
    <toolitem name="file-save" action="file-save"/>
    <toolitem name="file-save-all" action="file-save-all"/>
    <separator/>
    <toolitem name="edit-undo" action="edit-undo"/>
    <toolitem name="edit-redo" action="edit-redo"/>
    <separator/>
    <toolitem name="edit-cut" action="edit-cut"/>
    <toolitem name="edit-copy" action="edit-copy"/>
    <toolitem name="edit-paste" action="edit-paste"/>
    <toolitem name="edit-delete" action="edit-delete"/>
    <separator/>
    <separator/>
  </toolbar>

  <popup name="new-popup-menu">
    <menuitem name="file" action="new-file"/>
    <menuitem name="directory" action="new-directory"/>
  </popup>

  <popup name="editor-popup-menu">
    <menuitem name="edit-cut" action="edit-cut"/>
  </popup>

  <popup name="project-explorer-popup-menu">
    <menuitem name="project-new-file" action="project-new-file"/>
  </popup>

</ui>
