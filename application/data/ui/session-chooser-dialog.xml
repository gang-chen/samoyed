<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkDialog" id="new-session-dialog">
    <property name="title" translatable="yes">New Session</property>
    <child internal-child="vbox">
      <object class="GtkBox" id="new-session-vbox">
        <child>
          <object class="GtkGrid" id="new-session-grid">
            <property name="visible">true</property>
            <property name="column-spacing">6</property>
            <property name="border-width">12</property>
            <child>
              <object class="GtkEntry" id="new-session-name-entry">
                <property name="visible">true</property>
                <property name="text">default</property>
                <property name="activates-default">true</property>
                <property name="hexpand">true</property>
              </object>
              <packing>
                <property name="left-attach">1</property>
                <property name="top-attach">0</property>
                <property name="width">1</property>
                <property name="height">1</property>
              </packing>
            </child>
            <child>
              <object class="GtkLabel" id="new-session-name-label">
                <property name="visible">true</property>
                <property name="use-underline">true</property>
                <property name="label" translatable="yes">_Session name:</property>
                <property name="mnemonic-widget">new-session-name-entry</property>
                <property name="halign">start</property>
              </object>
              <packing>
                <property name="left-attach">0</property>
                <property name="top-attach">0</property>
                <property name="width">1</property>
                <property name="height">1</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="position">0</property>
          </packing>
        </child>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="new-session-button">
        <property name="visible">true</property>
        <property name="can-default">true</property>
        <property name="use-underline">true</property>
        <property name="label" translatable="yes">_OK</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="cancel-new-session-button">
        <property name="visible">true</property>
        <property name="use-underline">true</property>
        <property name="label" translatable="yes">_Cancel</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="switch-to-restore-session-button">
        <property name="visible">true</property>
        <property name="use-underline">true</property>
        <property name="label" translatable="yes">_Restore Session...</property>
        <property name="tooltip-text" translatable="yes">Restore a saved session instead of creating a new one</property>
      </object>
    </child>
    <action-widgets>
      <action-widget response="ok" default="true">new-session-button</action-widget>
      <action-widget response="cancel">cancel-new-session-button</action-widget>
      <action-widget response="1">switch-to-restore-session-button</action-widget>
    </action-widgets>
  </object>
  <object class="GtkListStore" id="sessions">
    <columns>
      <column type="gchararray"/>
      <column type="gboolean"/>
    </columns>
  </object>
  <object class="GtkDialog" id="restore-session-dialog">
    <property name="title">Restore Session</property>
    <child internal-child="vbox">
      <object class="GtkBox" id="restore-session-vbox">
        <child>
          <object class="GtkGrid" id="restore-session-grid">
            <property name="visible">true</property>
            <property name="row-spacing">6</property>
            <property name="border-width">12</property>
            <child>
              <object class="GtkTreeView" id="session-list">
                <property name="visible">true</property>
                <property name="model">sessions</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkTreeViewColumn" id="session-name-column">
                    <property name="title" translatable="yes">Names</property>
                    <property name="expand">true</property>
                    <child>
                      <object class="GtkCellRendererText" id="session-name-renderer"/>
                      <attributes>
                        <attribute name="text">0</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkTreeViewColumn" id="session-locked-column">
                    <property name="title" translatable="yes">Locked</property>
                    <child>
                      <object class="GtkCellRendererToggle" id="session-locked-renderer">
                        <property name="activatable">false</property>
                      </object>
                      <attributes>
                        <attribute name="active">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
              <packing>
                <property name="left-attach">0</property>
                <property name="top-attach">1</property>
                <property name="width">1</property>
                <property name="height">1</property>
              </packing>
            </child>
            <child>
              <object class="GtkLabel" id="restore-session-label">
                <property name="visible">true</property>
                <property name="use-underline">true</property>
                <property name="label" translatable="yes">Choose a _session:</property>
                <property name="mnemonic-widget">session-list</property>
                <property name="halign">start</property>
              </object>
              <packing>
                <property name="left-attach">0</property>
                <property name="top-attach">0</property>
                <property name="width">1</property>
                <property name="height">1</property>
              </packing>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="restore-session-button">
        <property name="visible">true</property>
        <property name="can-default">true</property>
        <property name="use-underline">true</property>
        <property name="label" translatable="yes">_OK</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="cancel-restore-session-button">
        <property name="visible">true</property>
        <property name="use-underline">true</property>
        <property name="label" translatable="yes">_Cancel</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="switch-to-new-session-button">
        <property name="visible">true</property>
        <property name="use-underline">true</property>
        <property name="label" translatable="yes">_New Session...</property>
        <property name="tooltip-text" translatable="yes">Create a new session instead of restoring a saved one</property>
      </object>
    </child>
    <action-widgets>
      <action-widget response="ok" default="true">restore-session-button</action-widget>
      <action-widget response="cancel">cancel-restore-session-button</action-widget>
      <action-widget response="2">switch-to-new-session-button</action-widget>
    </action-widgets>
  </object>
</interface>
